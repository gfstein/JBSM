<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="br.com.jbsm.model.Person" table="person">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="fone" column="fone" type="string"/>
        <property name="cell" column="cell" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="cpf" column="cpf" type="string"/>
        <property name="rg" column="rg" type="string"/>
        <property name="rgOrgao" column="rg_orgao" type="string"/>
        <property name="area" column="area" type="string"/>
        <property name="subarea" column="subarea" type="string"/>
    </class>
</hibernate-mapping>